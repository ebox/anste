<?xml version="1.0" encoding="UTF-8"?>
<suite>
    <name>eBox Mail tests</name>
    <desc>
    Contains a set of tests to check 
    that the eBox mail module works properly.
    </desc>
    
    <scenario>ebox/mail/only-internal.xml</scenario>

    <test type="selenium">
        <name>ConfigNetSetExternal</name>
        <desc>Sets eth2 as external.</desc>

        <host>ebox-server</host>
        <dir>set-external</dir>
        <var name="IFACE" value="eth2"/>
    </test>

    <test type="selenium">
        <name>ConfigMail</name>
        <desc>
        Config the mail server.
        </desc>

        <host>ebox-server</host>
        <dir>config-mail</dir>
        <var name="USERNAME" value="eboxtest"/>
        <var name="PASSWORD" value="eboxtest"/>
    </test>        

    <test>
        <name>TestClientMail</name>
        <desc>Checks if the user can send and receive mails</desc>

        <host>test-client</host>
        <dir>test-client-mail</dir>
    </test>

</suite>
