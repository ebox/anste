<suite>
    <name>eBox Samba tests</name>
    <desc>Contains samba-related tests.</desc>
    
    <scenario>ebox-and-client.xml</scenario>

    <test type="selenium">
        <name>ConfigNetwork</name>
        <desc>
        Set the interface as external, etc.
        </desc>

        <host>ebox-server</host>
        <dir>config-net</dir>
    </test>        

    <test type="selenium">
        <name>ConfigFileServer</name>
        <desc>
        Enables file sharing service and sets working mode
        to File server.
        </desc>

        <host>ebox-server</host>
        <dir>config-fileserver</dir>
    </test>        

    <test>
        <name>TestSmbClient</name>
        <desc>Puts and gets a file into the created user account</desc>

        <host>test-client</host>
        <dir>test-smbclient</dir>
    </test>        

    <test type="selenium">
        <name>ChangeQuota</name>
        <desc>
        Changes the user quota to 1MB.
        </desc>

        <host>ebox-server</host>
        <dir>change-quota</dir>
    </test>        

    <test>
        <name>TestQuota</name>
        <desc>Try to put a 4MB file in the user share and ensure
        this cannot be done.
        </desc>

        <host>test-client</host>
        <dir>test-quota</dir>
    </test>        
</suite>
