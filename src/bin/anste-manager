use strict;
use warnings;

use FindBin qw($Bin);
use lib "$Bin/../lib";

use ANSTE::Manager::AdminClient;

use Getopt::Long;
use Pod::Usage;

use constant PORT => 8777;

my $server = 'localhost';
my $port = PORT;
my $help = 0;


GetOptions('server=s' => \$server,
           'port=i' => \$port,
           'help' => \$help) or pod2usage(2);

pod2usage(1) if $help;           

pod2usage("$0: No command given.") if @ARGV == 0;

my $command = $ARGV[0];

if ($command eq 'list') {
    list();
}
else {
    print "Command not recognized\n";
    exit(1);
}
exit(0);

sub list
{
    my $client = getClient();
    my $list = $client->list();
    print $list;
}


sub getClient 
{
    my $URL = "http://$server:$port";

    # Create and return the client object
    my $client = new ANSTE::Manager::AdminClient();
    $client->connect($URL);
    return $client;
}

__END__

=head1 NAME

anste-manager - ANSTE manager

=head1 SYNOPSIS

anste-manager [options] list 

 Options:
   -help             shows this help
   -server <host>    host to connect (default: localhost) 
   -port <port>      port to connect (default: 8667)

=cut
