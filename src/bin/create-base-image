use warnings;
use strict;

use FindBin qw($Bin);
use lib "$Bin/../lib";

use ANSTE::Deploy::ImageCreator;

use threads;
use SOAP::Transport::HTTP;

# TODO: Read baseimage name from commandline and search its definition
use constant IMAGE => 'data/images/sarge-base.xml';
# It would be also cool to display a menu with the available image types.

my $image = new ANSTE::Scenario::Image();
$image->loadFromFile(IMAGE);

my $creator = new ANSTE::Deploy::ImageCreator($image);
$creator->createImage();
