use strict;
use warnings;

use FindBin qw($Bin);
use lib "$Bin/../lib";

use ANSTE::Comm::SlaveClient;

use Error qw(:try);

use constant MASTER => '/var/local/anste.master';
use constant PORT => 8001;

my $command = $ARGV[0];

sub usage
{
    print "Usage: anste-slave ready | finished <return value>\n";
}

if (@ARGV < 1) {
    usage();
    exit(1);
}

if ($command eq 'ready') {
    handleReady();
}
elsif ($command eq 'finished') {
    if (@ARGV < 2) {
        usage();
        exit(1);
    }
    handleFinished();
}
else { 
    usage();
    exit(1);
}

sub handleReady
{
    my $client = getClient();
    my $ok;
    try {
        $ok = $client->hostReady();
    } catch Error with {
        sleep 5;
        $ok = $client->hostReady();
    };
    exit(!$ok);
}

sub handleFinished
{
    my $client = getClient();
    my $ret = $ARGV[1];
    my $ok;
    try {
        $ok = $client->executionFinished($ret);
    } catch Error with {
        sleep 5;
        $ok = $client->executionFinished($ret);
    };
    exit(!$ok);
}

sub getClient 
{
    # Read the master host from file
    my $fh;
    open($fh, '<', MASTER) or die "Can't open file: $!";
    my $URL;
    chomp($URL = <$fh>);
    close($fh) or die "Can't close file: $!";

    # Create and return the client object
    my $client = new ANSTE::Comm::SlaveClient;
    $client->connect($URL);
    return $client;
}
